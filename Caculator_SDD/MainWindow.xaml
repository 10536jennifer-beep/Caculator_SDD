<Window
    x:Class="Caculator_SDD.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="WinUI Calculator">

    <Grid Background="#202020" Padding="12">

        <Grid.Resources>
            <Style x:Key="NumBtnStyle" TargetType="Button">
                <Setter Property="FontSize" Value="24"/>
                <Setter Property="Margin" Value="4"/>
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                <Setter Property="VerticalAlignment" Value="Stretch"/>
                <Setter Property="Background" Value="#3A3A3A"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="CornerRadius" Value="8"/>
            </Style>
            <Style x:Key="OpBtnStyle" TargetType="Button">
                <Setter Property="FontSize" Value="28"/>
                <Setter Property="Margin" Value="4"/>
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                <Setter Property="VerticalAlignment" Value="Stretch"/>
                <Setter Property="Background" Value="#505050"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="CornerRadius" Value="8"/>
            </Style>
            <Style x:Key="ActionBtnStyle" TargetType="Button">
                <Setter Property="FontSize" Value="24"/>
                <Setter Property="Margin" Value="4"/>
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                <Setter Property="VerticalAlignment" Value="Stretch"/>
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="FontWeight" Value="Bold"/>
            </Style>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Margin="0,0,0,12" Padding="16" Background="#303030" CornerRadius="8">
            <TextBlock Text="{x:Bind ViewModel.DisplayText, Mode=OneWay}" 
                       Foreground="White" 
                       FontSize="56" 
                       FontWeight="SemiBold"
                       HorizontalAlignment="Right" 
                       VerticalAlignment="Center"
                       TextTrimming="CharacterEllipsis"/>
        </Border>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Row="0" Grid.Column="0" Content="AC" Command="{x:Bind ViewModel.ClearCommand}" Style="{StaticResource ActionBtnStyle}" Background="#FF5C5C" Foreground="White"/>
            <Button Grid.Row="0" Grid.Column="1" Content="/"  Command="{x:Bind ViewModel.InputOperatorCommand}" CommandParameter="/" Style="{StaticResource OpBtnStyle}"/>
            <Button Grid.Row="0" Grid.Column="2" Content="*"  Command="{x:Bind ViewModel.InputOperatorCommand}" CommandParameter="*" Style="{StaticResource OpBtnStyle}"/>
            <Button Grid.Row="0" Grid.Column="3" Content="-"  Command="{x:Bind ViewModel.InputOperatorCommand}" CommandParameter="-" Style="{StaticResource OpBtnStyle}"/>

            <Button Grid.Row="1" Grid.Column="0" Content="7" Command="{x:Bind ViewModel.InputNumberCommand}" CommandParameter="7" Style="{StaticResource NumBtnStyle}"/>
            <Button Grid.Row="1" Grid.Column="1" Content="8" Command="{x:Bind ViewModel.InputNumberCommand}" CommandParameter="8" Style="{StaticResource NumBtnStyle}"/>
            <Button Grid.Row="1" Grid.Column="2" Content="9" Command="{x:Bind ViewModel.InputNumberCommand}" CommandParameter="9" Style="{StaticResource NumBtnStyle}"/>
            <Button Grid.Row="1" Grid.Column="3" Content="+" Command="{x:Bind ViewModel.InputOperatorCommand}" CommandParameter="+" Grid.RowSpan="2" Style="{StaticResource OpBtnStyle}" Height="Auto"/>

            <Button Grid.Row="2" Grid.Column="0" Content="4" Command="{x:Bind ViewModel.InputNumberCommand}" CommandParameter="4" Style="{StaticResource NumBtnStyle}"/>
            <Button Grid.Row="2" Grid.Column="1" Content="5" Command="{x:Bind ViewModel.InputNumberCommand}" CommandParameter="5" Style="{StaticResource NumBtnStyle}"/>
            <Button Grid.Row="2" Grid.Column="2" Content="6" Command="{x:Bind ViewModel.InputNumberCommand}" CommandParameter="6" Style="{StaticResource NumBtnStyle}"/>

            <Button Grid.Row="3" Grid.Column="0" Content="1" Command="{x:Bind ViewModel.InputNumberCommand}" CommandParameter="1" Style="{StaticResource NumBtnStyle}"/>
            <Button Grid.Row="3" Grid.Column="1" Content="2" Command="{x:Bind ViewModel.InputNumberCommand}" CommandParameter="2" Style="{StaticResource NumBtnStyle}"/>
            <Button Grid.Row="3" Grid.Column="2" Content="3" Command="{x:Bind ViewModel.InputNumberCommand}" CommandParameter="3" Style="{StaticResource NumBtnStyle}"/>
            <Button Grid.Row="3" Grid.Column="3" Content="=" Command="{x:Bind ViewModel.CaculateCommand}" Grid.RowSpan="2" Style="{StaticResource ActionBtnStyle}" Background="#4CC2FF" Height="Auto"/>

            <Button Grid.Row="4" Grid.Column="0" Content="0" Command="{x:Bind ViewModel.InputNumberCommand}" CommandParameter="0" Grid.ColumnSpan="2" Style="{StaticResource NumBtnStyle}"/>
            <Button Grid.Row="4" Grid.Column="2" Content="." Command="{x:Bind ViewModel.InputNumberCommand}" CommandParameter="." Style="{StaticResource NumBtnStyle}"/>
        </Grid>
    </Grid>
</Window>